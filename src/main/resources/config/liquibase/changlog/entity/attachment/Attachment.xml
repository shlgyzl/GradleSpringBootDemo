<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">


    <changeSet id="20200418091011" author="YangHaiYong" context="dev, test, prod" >
        <createTable tableName="tbl_attachment" remarks="文件">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="file_name" type="varchar(255)" remarks="文件名称">
                <constraints unique="false" nullable="false"/>
            </column>
            <column name="simple_name" type="varchar(255)" remarks="文件简称">
                <constraints unique="false" nullable="false"/>
            </column>
            <column name="original_file_name" type="varchar(255)" remarks="文件原名称">
                <constraints unique="false" nullable="false"/>
            </column>
            <column name="file_size" type="bigint" remarks="文件大小(字节数)">
                <constraints unique="false" nullable="false"/>
            </column>
            <column name="file_size_formatted" type="varchar(255)" remarks="文件大小(带有单位)">
                <constraints unique="false" nullable="false"/>
            </column>
            <column name="content_type" type="varchar(255)" remarks="文件类型">
                <constraints unique="false" nullable="false"/>
            </column>
            <column name="content" type="longblob" remarks="文件内容(blob/longblob)">
                <constraints unique="false" nullable="false"/>
            </column>
            <column name="file" type="longblob" remarks="文件内容(longblob)">
                <constraints unique="false" nullable="true"/>
            </column>
            <column name="string_content" type="longtext" remarks="文件内容(text/longtext)">
                <constraints unique="false" nullable="true"/>
            </column>
            <column name="image" type="longblob" remarks="文件图片(longblob)">
                <constraints unique="false" nullable="true"/>
            </column>
            <column name="file_path" type="varchar(255)" remarks="文件路径">
                <constraints unique="false" nullable="false"/>
            </column>
            <column name="url" type="varchar(255)" remarks="文件网络路径">
                <constraints unique="false" nullable="true"/>
            </column>
            <column name="created_by" type="varchar(255)" remarks="第一次创建人">
                <constraints nullable="true"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}" remarks="第一次创建时间">
                <constraints nullable="true"/>
            </column>
            <column name="last_modified_by" type="varchar(255)" remarks="最后一次更新人">
                <constraints nullable="true"/>
            </column>
            <column name="last_modified_date" type="timestamp" defaultValueDate="${now}" remarks="最后一次更新时间">
                <constraints nullable="true"/>
            </column>
            <column name="version" type="bigint" defaultValue="0" remarks="文件版本锁">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
